<body>
  <h1>Editing Book</h1>
  
  <% if @book.errors.any? %>
  <div id="edit-error">
      <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>
  </div>
  
  <%= form_with model: @book do |f| %>
    <div class="field">
      <label>Title</label>
      <%= f.text_field :title %>
    </div>
    
    <div class="field">
      <label>Body</label>
      <%= f.text_area :body %>
    </div>
    
    <div class="action">
      <%= f.submit 'Update Book' %>
    </div>
    
    <div class="action">
      <%= link_to "Show", book_path(@book.id) %>
       | 
      <%= link_to "Back", '/books' %>
    </div>
  <% end %>
</body>